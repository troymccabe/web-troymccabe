<!doctype html>
<html>
<head>
    <title>Javascript equation representation example</title>
    <style>
        html, body {
            width:  100%;
            height: 100%;
            margin: 0px;
        }
    </style>
    <script src="/js/InfixDiagram.js" type="text/javascript"></script>
    <script src="/js/PostfixStatement.js" type="text/javascript"></script>
    <script>
        function recalc(){
            var pfContainer = document.getElementById('postfix-container');

            document.getElementById('diagram-canvas').style.display = 'block';
            pfContainer.style.display = 'block';
            try {
                new InfixDiagram(document.getElementById('formula').value).draw('diagram-canvas');
                pfContainer.style.color = 'black';
                pfContainer.innerHTML = 'Postfix: ' + new PostfixStatement(document.getElementById('formula').value).generate();
            } catch (ex) {
                pfContainer.style.color = 'red';
                pfContainer.innerHTML = ex;
            }
        }
    </script>
</head>
<body>
<input type="text" id="formula" style="width: 250px;" />
<a href="#" onclick="recalc()">Convert</a>
<div id="postfix-container" style="display:none;"></div>
<canvas id="diagram-canvas" style="display:none;"></canvas>
</body>
</html>